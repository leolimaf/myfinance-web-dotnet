@{
    ViewData["Title"] = "Plano de Contas";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-block btn-primary" onclick="Novo()">Criar item de Plano de Conta</button>

<table class="table table-bordered mt-4">
    <tr>
        <th>Id</th>
        <th>Descricao</th>
        <th>Tipo</th>
        <th>#</th>
        <th>#</th>
    </tr>
    
    @{
        foreach (var item in (List<PlanoContaModel>)ViewBag.PlanoContas)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descricao</td>
                <td>@item.Tipo</td>
                <td><button type="button" class="btn btn-outline-warning" onclick="Atualizar(@item.Id.ToString())">Atualizar</button></td>
                <td><button type="button" class="btn btn-outline-danger" onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
            </tr>
        }
    }
</table>

<script>
    function Novo() {
        window.location.href = '/PlanoConta/Cadastrar/';
    }
    
    function Atualizar(id) {
        window.location.href = '/PlanoConta/Cadastrar/' + id;
    }

    function Excluir(id) {
        window.location.href = '/PlanoConta/Excluir/' + id;
    }
</script>